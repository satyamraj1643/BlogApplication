
<div class="bg-blue-600 font-[Poppins]">
    <span class="absolute text-white text-4xl top-5 left-4 cursor-pointer" onclick="Open()">
      <i class="bi bi-filter-left px-2 bg-[#186F65] rounded-md "></i>
    
    </span>
  
   <div class="sidebar fixed top-0 bottom-0 lg:left-0 left-[-300px] p-2 w-[300px] overflow-y-auto text-center bg-[#22668D]"> 
   
    <div class="text-gray-100 text-xl">
      <div class="p-2.5 mt-1 flex items-center"> 
        <i class="bi bi-app-indicator px-2 py-1 bg-[#B5CB99] rounded-md"></i>
          <h1 class="font-bold text-lg text-[#fff] text-[15px] ml-7">Blogged!</h1>
          <i class="bi bi-x ml-20 cursor-pointer lg:hidden" onclick="Open()"></i>
      </div>
      <hr class="my-2 text-gray-600">
  
    </div>
  
    <% if (!locals.uservalue) { %>
      <div class="p-2.5  bg-[#FA7070] mt-3 flex items-center rounded-md px-4 duration-300 cursor-pointer hover:bg-blue-600 text-white ">
        <i class="bi bi-box-arrow-in-right"></i>
        <a href="/login"  class="text-[15px] ml-4 text-gray-200"> Login  </a>
        
        
      </div>
      <div class="p-2.5 bg-[#FA7070] mt-3 flex items-center rounded-md px-4 duration-300 cursor-pointer hover:bg-blue-600 text-white ">
        <i class="bi bi-house-door-fill text-sm"></i>
        <a href= "/signup " class="text-[15px] ml-4 text-gray-200"> Signup </a>
        
        
      </div>
  
      
  
    <% } else { %>
      <div class="p-2.5 mt-3 flex items-center rounded-md px-4 duration-300 cursor-pointer  hover:bg-[#186F65] text-white ">
        <i class="bi bi-house-door-fill text-sm"></i>
        <a  href="/home" class="text-[15px] ml-4 text-gray-200"><%- locals.uservalue.firstName %>  <%- locals.uservalue.lastName %>   </a>
        
        
      </div>
      <div class="p-2.5 mt-3 flex items-center rounded-md px-4 duration-300 cursor-pointer bg-blue-600  text-white ">
        <i class="bi bi-pencil-square"></i>
        <span class="text-[15px] ml-4 text-gray-200"> Write  </span>
      </div>
      <div class="p-2.5 mt-3 flex items-center rounded-md px-4 duration-300 cursor-pointer hover:bg-[#186F65] text-white ">
        <i class="bi bi-person-fill-up"></i>
        <a href="/blogs" class="text-[15px] ml-4 text-gray-200"> My Blogs  </a>
      </div>
  
     
     
       
    <% } %>
  
    
  
  
  
    
