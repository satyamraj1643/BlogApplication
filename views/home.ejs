<!doctype html>
<html>
<%- include('./partials/head.ejs') %>

<body class="font-[Montserrat] bg-[#89CFF3] h-screen">


  <div class="flex">
    <div class=" p-4">
      <%- include('./partials/navbarused.ejs') %>
    </div>
    <div class="ml-[15rem] p-4">

      <div class="flex flex-wrap justify-center">
        <% blogs.forEach(element => { %>
          <div class="m-4 sm:m-6 md:m-8 lg:m-10 xl:m-12 w-full sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/4">
            <div class="max-w-sm rounded-xl overflow-hidden shadow-lg bg-[#A7D397]">
              <img class="w-full" src="<%- element.coverImageURL %>" alt="<%- element.title %>" >
              <div class="px-6 py-4 ">
                <div class="font-bold text-xl mb-2"><%- element.title %></div>
               <a href="/element/<%- element._id %>" class="bg-blue-100 text-black rounded-md   p-2 m-2"> View </a>
  
                <br>
  
                <p> By: <%- element.userName %></p>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
       


    </div>
</div>
  
   

   

    <%- include('./partials/script.ejs') %>
</body>

</html>
